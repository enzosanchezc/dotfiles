# ENV
export PATH="$PATH:$HOME/.local/bin"
alias ssh='TERM=xterm-256color ssh'

# Oh my zsh and plugins
export ZSH="$HOME/.oh-my-zsh"
export ZSH_THEME="spaceship"
export SPACESHIP_CONFIG="$HOME/.config/spaceship.zsh"
plugins=(git zsh-syntax-highlighting)
source $ZSH/oh-my-zsh.sh

# Editor
export EDITOR=/usr/bin/vim

# Kubectl
source <(kubectl completion zsh)
alias k=kubectl
alias kgp='kubectl get pods'
alias kdp='kubectl describe pods'
alias kgn='kubectl get nodes'
alias kgs='kubectl get services'

# Krew
export PATH="${KREW_ROOT:-$HOME/.krew}/bin:$PATH"

# Terraform
autoload -U +X bashcompinit && bashcompinit
complete -o nospace -C /usr/bin/terraform terraform
alias tf=terraform

# Kubeswitch
source <(switcher init zsh)
source <(alias s=switch)
source <(compdef _switcher switch)

# Golang
export GOPATH="$HOME/go"

# Clusterctl
source <(clusterctl completion zsh)

# Bitwarden SSH Agent
if [ -e "$HOME/.var/app/com.bitwarden.desktop/data/.bitwarden-ssh-agent.sock" ]; then
    export SSH_AUTH_SOCK="$HOME/.var/app/com.bitwarden.desktop/data/.bitwarden-ssh-agent.sock"
else
    export SSH_AUTH_SOCK="$HOME/.bitwarden-ssh-agent.sock"
fi

# Work environment
if [ -e "$HOME/.zshrc_work" ]; then
    source "$HOME/.zshrc_work"
fi
